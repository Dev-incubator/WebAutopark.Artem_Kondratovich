@model IEnumerable<OrderViewModel>;

<h1 class="display-4">Orders</h1>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>ModelName</th>
            <th>RegistrationNumber</th>
            <th>OrderDate</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td><a asp-controller="OrderItem" asp-action="Index" asp-route-orderId="@order.OrderId">@order.Vehicle.Model</a></td>
                <td>@order.Vehicle.RegistrationNumber</td>
                <td>@order.Date.ToString("MM/dd/yyyy HH:mm")</td>
            </tr>
        }
    </tbody>
</table>