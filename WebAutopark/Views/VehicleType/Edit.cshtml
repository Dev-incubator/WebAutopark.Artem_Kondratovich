@model VehicleTypeViewModel

<form method="post" asp-action="Edit">
    <input type="hidden" name="VehicleTypeId" value="@Model.VehicleTypeId">
    <table class="table">
        <tbody>
            <tr>
                <th>TypeName</th>
                <td>
                    <input type="text" asp-for="TypeName" value="@Model.TypeName">
                    <span class="text-danger" asp-validation-for="TypeName"></span>
                </td>
            </tr>
            <tr>
                <th>TaxCoefficient</th>
                <td>
                    <input type="text" asp-for="TaxCoefficient" value="@Model.TaxCoefficient">
                    <span class="text-danger" asp-validation-for="TaxCoefficient"></span>
                </td>
            </tr>
        </tbody>
    </table>
    <button type="submit" class="btn btn-outline-primary">Edit vehicle type</button>
    <button type="reset" class="btn btn-outline-dark">Reset</button>
</form>

